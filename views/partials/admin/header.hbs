     <script>
// Get the current active menu item from local storage
var activeMenuItem = localStorage.getItem("activeMenuItem");

// If there's an active menu item, set it to active
if (activeMenuItem) 
    document.querySelector(".menu-item.active").classList.remove("active");
    document.querySelector(activeMenuItem).classList.add("active");
}

// Add event listener to each menu item
var menuItems = document.querySelectorAll(".menu-item");
menuItems.forEach(function (menuItem) {
    menuItem.addEventListener("click", function () {
        // Remove active state from previous menu item
        document.querySelector(".menu-item.active").classList.remove("active");

        // Set active state to clicked menu item
        menuItem.classList.add("active");

        // Store the active menu item in local storage
        localStorage.setItem("activeMenuItem", "#" + menuItem.getAttribute("id"));
    });
});
</script>

