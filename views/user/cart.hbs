<script>
        // Get the input field for the quantity
const quantityInput = document.querySelector('.pro-qty input');
const productId = document.querySelector('product-id');

// Listen for changes in the quantity input field
quantityInput.addEventListener('change', (event) => {
  const newQuantity = parseInt(event.target.value);
  const productId = '{{cartItem.productId._id}}'; // Replace with the actual product ID

  // Send an AJAX request to update the quantity of the item in the cart
  $.ajax({
    type: 'POST',
    url: '/update-cart',
    data: {
      productId,
      newQuantity
    },
    success: function(data) {
      // Update the total price in the cart
      const totalPrice = data.totalPrice;
      const totalPriceElement = document.querySelector('.cart-total-price');
      totalPriceElement.innerText = totalPrice;
    },
    error: function(xhr, status, error) {
      console.log(error);
    }
  });
});

    </script>