<!-- Start Card Style -->
<div class="rbt-dashboard-area rbt-section-overlayping-top rbt-section-gapBottom mt-5">
    <div class="container mt-5">
        <div class="row mt-5">
         {{#each job}}
<div class="col-lg-12 mt--30">
    <div class="profile-content rbt-shadow-box">
        <h4 class="rbt-title-style-3">{{title}}</h4>
        <div class="row g-5">
            <div class="col-lg-8">
                <p class="mt--10 mb--20">{{subTitle}}</p>
            </div>
            <div class="col-lg-2 offset-lg-2">
                <div class="feature-sin best-seller-badge text-end h-100">
                    <button class="trigger-button" data-modal-id="myModal{{@index}}">Open Modal</button>

                    <!-- The modal -->
                    <div id="myModal{{@index}}" class="mymodal">
                        <!-- Modal content -->
                        <div class="modal-content">
                            <div class="btn">
                                <span class="close">&times;</span>
                            </div>
                            <div class="modal-heading">
                                <h1>{{title}}</h1>
                                <h5>{{subTitle}}</h5>
                            </div>
                            <div class="modal-description">
                                <h4>Job Description</h4>
                                <p>
                                    {{description}}
                                </p>
                            </div>
                            <div class="modal-req">
                                <h4>Requirements</h4>
                                <ul>
                                    {{#each requirements}}
                                    <li>{{this}}</li>
                                    {{/each}}
                                </ul>
                            </div>
                            <div class="apply-btn">
                                <a href="{{link}}" target="_blank" class="btn btn-primary apply-btn">Apply Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/each}}

        </div>
    </div>
</div>
<style>
    /* Styling for the modal */
    .mymodal {
        display: none;
        position: fixed;
        z-index: 100;
        left: 0;
        top: 0;
        width: 100% !important;
        height: 100vh !important;
        overflow: hidden ;
        background-color: rgba(0, 0, 0, 0.5);
    }

    .modal-content {
        background-color: #fefefe;
        margin: 15% auto;
        margin-top: 10rem !important;
        padding: 20px;
        border: 1px solid #888;
        width: 100%;
        max-width: 45%;
        text-align: start;
        padding: auto;
        border-radius: 10px;
    }

    .modal-heading {
        margin-bottom: 30px;
    }

    .mymodal h4 {
        text-decoration: underline;
        margin-bottom: 20px;
    }

    .modal-description {
        margin-bottom: 20px;
    }

 @media (min-width: 300px) and (max-width: 480px){
.modal-content{
    max-width: 90%;
    top: 2px !important;
    overflow: auto;
}
.mymodal{
    overflow: auto;
}

 }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
        cursor: pointer;
    }

    /* Styling for the button */
    .trigger-button {
        padding: 10px 20px;
        color: black;
        border: rgb(195, 191, 191) 0.5px solid;
        cursor: pointer;
        border-radius: 7px;

    }

    .trigger-button:hover {
        background-color: #0d6efd;
        color: white;
    }

    .apply-btn{
 padding: 10px 20px;
    }
</style>


<script>
    // Get all trigger buttons
    var buttons = document.getElementsByClassName("trigger-button");

    // Get all modals
    var modals = document.getElementsByClassName("mymodal");

    // Function to open the modal
    function openModal() {
        var modalId = this.getAttribute("data-modal-id");
        var modal = document.getElementById(modalId);
        modal.style.display = "block";
    }

    // Function to close the modal
    function closeModal() {
        var modal = this.closest(".mymodal");
        modal.style.display = "none";
    }

    // Event listener for button click
    for (var i = 0; i < buttons.length; i++) {
        buttons[i].addEventListener("click", openModal);
    }

    // Event listener for close button click
    var closeButtons = document.getElementsByClassName("close");
    for (var j = 0; j < closeButtons.length; j++) {
        closeButtons[j].addEventListener("click", closeModal);
    }
</script>
