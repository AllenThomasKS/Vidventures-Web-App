<section class="content-main">
    <form action="/admin/editProduct" method="post">
            <div class="row">
                <div class="col-9">
               

                    <div class="content-header">
                        <h2 class="content-title">Edit Product</h2>
                        <div>
                            {{!-- <button class="btn btn-light rounded font-sm mr-5 text-body hover-up">Save to draft</button> --}}
                            <button type="submit" class="btn btn-md rounded font-sm hover-up">Update</button>
                        </div>
                    </div>
                   
                </div>
                <div class="col-lg-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4></h4>
                        </div>
                        <div class="card-body">
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Product Name</label>
                                    <input type="text" placeholder="Type here" value="{{product.name}}" name="name" class="form-control" id="product_name">
                                </div>
                                  <div class="mb-4">
                                    <label for="product_name" class="form-label">Short Description</label>
                                    <input type="text" placeholder="Type here" value="{{product.sdescription}}" name="sdescription" class="form-control" id="product_name">
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Full description</label>
                                    <input placeholder="Type here" value="{{product.description}}" name="description" class="form-control" rows="4"></input>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="mb-4">
                                            <label class="form-label">Maximum Retail price</label>
                                            <div class="row gx-2">
                                                <input placeholder="$" type="text" value="{{product.mrp}}" name="mrp" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="mb-4">
                                            <label class="form-label">Promotional price</label>
                                            <input placeholder="$" value="{{product.discountedPrice}}" type="text" name="discountedPrice" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <label class="form-label">Currency</label>
                                        <select class="form-select">
                                            <option> USD </option>
                                        </select>
                                    </div>
                                    <div class="mb-4">
                                    <label for="product_name" class="form-label">Google Drive Link</label>
                                    <input type="text" placeholder="Type here" value="{{product.link}}" name="link" class="form-control" id="link">
                                </div> 
                                </div>
                                <input type="hidden" name="id" value="{{product._id}}">                               
                        </div>
                    </div> <!-- card end// -->
                </div>
                <div class="col-lg-3">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Media</h4>
                        </div>
                        <div class="card-body">
                            <div class="">
                                <img src="assets/ProductImages/{{product.image}}" alt="">
                                <input class="form-control" name="image" type="file">
                            </div>
                        </div>
                        
                    </div> <!-- card end// -->
                   
                </div>
            </div>
             </form>
            

           
        </section> <!-- content-main end// -->